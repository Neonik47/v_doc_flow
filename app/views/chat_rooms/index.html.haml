%h1= t(".title")
= link_to t('chat_rooms.new_chat_room'), new_chat_room_path, class: "btn btn-primary"

%table.table.table-hover
  - @chat_rooms.each do |chat_room|
    %tr
      %td
        %span.glyphicon.glyphicon-envelope
      %td
        = chat_room.name
      %td.col-xs-2
        .btn-group
          = link_to t("show"), chat_room, class: "btn btn-primary"
          %button.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li= link_to t("edit"), edit_chat_room_path(chat_room)
            %li.divider
            %li= link_to t("destroy"), chat_room, method: :delete, data: { confirm: t("confirm") }
