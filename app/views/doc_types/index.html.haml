%h1= t(".title")

.panel.panel-primary
  .panel-heading
    = t("doc_types.list")
  %table.table.table-hover
    %tr
      %th= t("doc_types.name")
      %th= t("action")
    - @doc_types.each do |doc_type|
      %tr
        %td
          = doc_type.name
        %td.col-xs-2
          .btn-group
            = link_to t("show"), doc_type, class: "btn btn-primary"
            %button.btn.btn-primary.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to t("edit"), edit_doc_type_path(doc_type)
              %li.divider
              %li= link_to t("destroy"), doc_type, method: :delete, data: { confirm: t("confirm") }
= link_to t("doc_types.new_doc_type"), new_doc_type_path, class: "btn btn-success"
