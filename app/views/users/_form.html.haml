= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :email
    %br
    = f.email_field :email
  .field
    = f.label :role
    %br
    = f.select :role, options_for_select(User::Defines::ROLES.map{|role, name| [name, role]}, selected: @user.try(:role)), class: 'col-lg-6'

  .actions
    = f.submit t("save"), class: 'btn btn-success'
    = link_to t("back"), users_path, class: "btn btn-primary"
